# NHL Companion Frontend Environment Configuration
# Copy this file to .env.local and fill in your values

# API Configuration
# Note: API_BEARER_TOKEN is NOT prefixed with NEXT_PUBLIC_ to keep it server-side only
API_BEARER_TOKEN=your-token-here

# API URL (server-side only)
# For local development: http://localhost:8001
# For production: Your Heroku API URL (e.g., https://your-app-name.herokuapp.com)
API_BASE_URL=http://localhost:8001

# Feature Flags
# Enable test mode for simulating live games (useful when no games are live)
# Set to 'true' to enable, anything else or omit to disable
NEXT_PUBLIC_ENABLE_TEST_MODE=false

